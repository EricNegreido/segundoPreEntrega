
<body>
    <h1>Listado de Productos</h1>
    <div class="product-list">
        {{#each products}}
        <div class="product-card">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <!-- Agrega aquí otros campos como precio, stock, etc. -->
            <button class="add-to-cart-button" data-product-id="{{this._id}}">Agregar al Carrito</button>
        </div>
        {{/each}}
    </div>
    
    <!-- Agrega aquí la lógica de paginación, por ejemplo, botones "Anterior" y "Siguiente" -->
    <div class="pagination">
        {{#if hasPrevPage}}
            <a href="?page={{prevPage}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="?page={{nextPage}}">Siguiente</a>
        {{/if}}
    </div>
